<odoo>
    <template id="monthly_maintenance_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="object">
                    <div class="text-center">
                        <h2>MAINTENANCE REPORT</h2>
                        <strong>MONTHLY</strong>
                    </div>

                    <div class="mt16">
                        <strong>Society Name</strong><br/>
                      <t t-out="object.society_id.name"/>
                        <br/>
                        <strong>Address</strong><br/>
<!--                        <t t-esc="object.society_id.address"/>-->
                        <br/>
                        <strong>Total Apartments</strong><br/>
                        0
                    </div>

                    <div class="mt16 text-right">
                        <strong>Month &amp; Year</strong><br/>
<!--                        <t t-esc="object.r_month"/> <t t-esc="object.r_year"/>-->
                    </div>

                    <table class="table table-sm mt16">
                        <thead>
                            <tr>
                                <th>Apartment</th>
                                <th>Amount Billed (INR)</th>
                                <th>Amount Paid (INR)</th>
                                <th>Pending (INR)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Total</td>
                                <td>0</td>
                                <td>0</td>
                                <td>0</td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>

    </template>
</odoo>

