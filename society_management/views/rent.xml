<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_rent_form" model="ir.ui.view">
        <field name="name">rent</field>
        <field name="model">society.rent</field>
        <field name="arch" type="xml">
            <form string="Rent">
                <sheet>
                    <group>

                        <field name="r_apart_num"/>
                        <field name="r_tenant_name"/>
                        <field name="r_year" invisible="r_apart_num == False"/>
                        <field name="r_month" invisible="r_apart_num == False"/>
                        <!--                <field name="rent_amt"/>-->
                        <field name="r_status"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_rent_list" model="ir.ui.view">
        <field name="name">rent</field>
        <field name="model">society.rent</field>
        <field name="arch" type="xml">
            <list string="rent">
                <field name="r_apart_num"/>
                <field name="r_tenant_name"/>
                 <field name="rent_for"/>
                <!--                <field name="rent_amt"/>-->
                <field name="r_status"/>
                <field name="r_date"/>


            </list>
        </field>
    </record>

    <record id="action_society_rent" model="ir.actions.act_window">
        <field name="name">rent</field>
        <field name="res_model">society.rent</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_rent_list"/>
    </record>

</odoo>