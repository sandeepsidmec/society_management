<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_assets_form" model="ir.ui.view">
        <field name="name">assets</field>
        <field name="model">society.assets</field>
        <field name="arch" type="xml">
            <form string="Assets">
                <sheet>
                    <group>
                        <group>
                            <field name="asset_name"/>
                            <field name="category"/>
                            <field name="condition"/>
                            <field name="tower"/>
                            <field name="floor"/>
                        </group>
                        <group>
                            <field name="num"/>
                            <field name="loc"/>
                            <field name="date"/>
                            <field name="doc"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_assets_list" model="ir.ui.view">
        <field name="name">assets</field>
        <field name="model">society.assets</field>
        <field name="arch" type="xml">
            <list string="Assets">
                <field name="asset_name"/>
                <field name="tower"/>
                <field name="floor"/>
                <field name="num"/>
                <field name="condition"/>


            </list>
        </field>
    </record>

    <record id="action_society_assets" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">society.assets</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_assets_list"/>
    </record>

</odoo>