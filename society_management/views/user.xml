<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_user_form" model="ir.ui.view">
        <field name="name">User</field>
        <field name="model">society.user</field>
        <field name="arch" type="xml">
            <form string="User">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="role"/>
                            <field name="status"/>
                            <field name="photo"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_user_list" model="ir.ui.view">
        <field name="name">User</field>
        <field name="model">society.user</field>
        <field name="arch" type="xml">
            <list string="User">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="role"/>
                <field name="status"/>
            </list>
        </field>
    </record>


    <record id="action_society_user" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="res_model">society.user</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_user_list"/>
    </record>

</odoo>