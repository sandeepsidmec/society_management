<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_services_form" model="ir.ui.view">
            <field name="name">services</field>
            <field name="model">society.add_services</field>
            <field name="arch" type="xml">
                <form string="Services">
                    <sheet>
                        <group>
                            <field name="service"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="view_services_list" model="ir.ui.view">
            <field name="name">services</field>
            <field name="model">society.add_services</field>
            <field name="arch" type="xml">
                <list string="Services">
                    <field name="service"/>
                </list>
            </field>
        </record>
        <record id="action_society_services" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">society.add_services</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_services_list"/>
        </record>
    </data>
</odoo>
