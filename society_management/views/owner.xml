<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_owner_form" model="ir.ui.view">
        <field name="name">owner</field>
        <field name="model">society.owner</field>
        <field name="arch" type="xml">
            <form string="owner">
                <sheet>
                    <group>
                        <field name="o_name"/>
                        <field name="o_email"/>
                        <field name="o_phone"/>
                        <field name="o_status"/>
                        <field name="o_tower_id"/>
                        <field name="o_floor_id"/>
                        <field name="Owner_apart" widget="many2many_tags"/>
                        <field name="o_photo"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_owner_list" model="ir.ui.view">
        <field name="name">owner</field>
        <field name="model">society.owner</field>
        <field name="arch" type="xml">
            <list string="owner">
                <field name="o_name"/>
                <field name="o_email"/>
                <field name="o_phone"/>
                <field name="o_status"/>
                <field name="Owner_apart"/>

            </list>
        </field>
    </record>

    <record id="action_society_owner" model="ir.actions.act_window">
        <field name="name">owner</field>
        <field name="res_model">society.owner</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_owner_list"/>
    </record>

</odoo>